name: ğŸ§ª Paybo Automation Tests

on:
  push:
    branches: [main, develop]
  pull_request:
    branches: [main, develop]
  schedule:
    - cron: '0 2 * * *'  # Jalankan setiap hari jam 2 pagi

jobs:
  test:
    name: Playwright Tests
    runs-on: ubuntu-latest
    timeout-minutes: 60

    strategy:
      fail-fast: false
      matrix:
        browser: [chromium, firefox, webkit]

    steps:
      - name: ğŸ“¥ Checkout code
        uses: actions/checkout@v3

      - name: ğŸ“¦ Setup Node.js
        uses: actions/setup-node@v3
        with:
          node-version: 18
          cache: 'npm'

      - name: ğŸ“š Install dependencies
        run: npm ci

      - name: ğŸŒ Install Playwright browsers
        run: npx playwright install --with-deps

      - name: ğŸ§ª Run Playwright tests
        run: npm test
        env:
          PAYBO_EMAIL: ${{ secrets.PAYBO_EMAIL }}
          PAYBO_PASSWORD: ${{ secrets.PAYBO_PASSWORD }}
          CI: true

      - name: ğŸ“Š Upload test results
        if: always()
        uses: actions/upload-artifact@v3
        with:
          name: playwright-report-${{ matrix.browser }}
          path: playwright-report/
          retention-days: 30

      - name: ğŸ“ Upload test-results
        if: always()
        uses: actions/upload-artifact@v3
        with:
          name: test-results-${{ matrix.browser }}
          path: test-results/
          retention-days: 30

      - name: ğŸ“ˆ Publish test report
        if: always()
        uses: dorny/test-reporter@v1
        with:
          name: Playwright Test Results (${{ matrix.browser }})
          path: test-results/results.xml
          reporter: java-junit
          fail-on-error: false

  notify:
    name: ğŸ“¢ Notify Results
    runs-on: ubuntu-latest
    if: always()
    needs: test

    steps:
        - name: âœ… Test Status
          run: |
            if [ "${{ needs.test.result }}" == "success" ]; then
              echo "âœ… All tests passed!"
            else
              echo "âŒ Some tests failed!"
            fi